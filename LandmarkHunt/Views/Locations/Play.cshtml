@model LandmarkHunt.Data.Location

@{
    ViewData["Title"] = "Play";
}

<h1>Play</h1>

<div>
    <h4>Location</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.PhotoUrl)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.PhotoUrl)
        </dd>
    </dl>
</div>
<div class="row">
    <div class="col-md-4">
        <form asp-action="Guess">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <div class="form-group">
                <label asp-for="Year" class="control-label"></label>
                <input asp-for="Year" class="form-control" />
                <span asp-validation-for="Year" class="text-danger"></span>
            </div>

            <input asp-for="Latitude" class="form-control" value="42.4848207754886" hidden />
            <input asp-for="Longitude" class="form-control" value="26.503626108169556" hidden />

            <div id="map" style="width: 500px; height: 400px;"></div>

            <div class="form-group">
                <input type="submit" value="Guess" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{
        <script type="text/javascript" src="https://maps.googleapis.com/maps/api/js?v=3.exp&sensor=false&libraries=weather"></script>
        <script src="~/js/LocationPicker/picker.js?version-2.0"></script>
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
