@model IEnumerable<LandmarkHunt.Data.Challenge>

@{
    ViewData["Title"] = "Games";
}
<div style="text-align:center">

<h1 class="m-2" style="text-align:center">Challenges for you</h1>
<div class="d-flex justify-content-center">
        <table style="margin:auto;border-collapse: separate;
 border-spacing: 16px 0px;" class="b-2">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.CreatorUser)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CreatorUser.Email)
            </td>
            <td>
                            <a asp-controller="SessionChallenges" asp-action="ChooseHardness" asp-route-id="@item.Id" style="color: #cc7a00">Play</a>
            </td>
        </tr>
}
    </tbody>
</table>
</div>
</div>