@model LandmarkHunt.Data.Challenge

@{
    ViewData["Title"] = "Delete";
}

<h1 class="m-lg-2">Delete</h1>

<h3 class="ms-2">Are you sure you want to delete this challenge?</h3>
<hr />
<div class="ms-2">
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Name)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Name)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.CreatorUser)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.CreatorUser.Id)
        </dd>
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Delete" class="btn btn-danger" /> |
        <a asp-action="YourChallenges">Back to List</a>
    </form>
</div>
