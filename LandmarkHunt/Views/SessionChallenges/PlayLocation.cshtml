@model LandmarkHunt.Data.Location

@{
    ViewData["Title"] = "Play";
}

<div class="h-100 w-100 justify-content-center">
    <h1 class="m-2" style="text-align:center">Guess this location</h1>
    <div class="row w-100 m-0 d-flex justify-content-center">
        <div class="col-md-6 col-lg-8 d-flex justify-content-center" style="max-height: 75vh;">
            <img src="@ViewBag.ImageDataUrl" class="w-100 h-100" style="object-fit: contain;" />
        </div>

        <div class="col container d-flex align-items-center justify-content-center" style="background-color: #d9d9d9;">
            <form asp-action="Guess" class="w-100">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" value="@Model.Id"/>
            <input type="hidden" name="sessionId" value="@ViewData["sessionId"]"  />

                <div class="form-group d-flex align-items-center justify-content-center b-2">
                    <label asp-for="Year" class="control-label"></label>
                    <input asp-for="Year" class="form-control w-50 m-1" value="0" />
                    <span asp-validation-for="Year" class="text-danger"></span>
                </div>
                <input asp-for="Latitude" class="form-control" value="42.4848207754886" hidden />
                <input asp-for="Longitude" class="form-control" value="26.503626108169556" hidden />
                <div id="map" style="width: 100%;height: 50vh;position: relative;overflow: hidden;"></div>
                <div class="form-group d-flex justify-content-center m-2">
                    <input type="submit" value="Guess" class="btn btn-primary" />
                </div>
            </form>
            </div>
    </div>
</div>

@section Scripts {
    @{
        <script type="text/javascript" src="https://maps.googleapis.com/maps/api/js?v=3.exp&sensor=false&libraries=weather"></script>
        <script src="~/js/LocationPicker/picker.js?version-2.3"></script>
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
