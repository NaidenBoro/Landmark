@model LandmarkHunt.Models.LeaderboardViewModel

<h1>Leaderboard</h1>

@if (Model?.UserScores?.Count > 0)
{
    <table>
        <thead>
            <tr>
                <th>User</th>
                <th>Score</th>
            </tr>
        </thead>
        <tbody>
            @{
                Model.UserScores = Model.UserScores.OrderByDescending(x => x.totalScore).ToList();
            }
            @for (int i = 0; i < Model.UserScores.Count; i++)
            {
                <tr>
                    <td>
                        @Model.UserScores[i].UserEmail
                    </td>
                    <td>
                        @Model.UserScores[i].totalScore
                        </td>
                        
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <p>No users found.</p>
}